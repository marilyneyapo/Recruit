{% extends 'base.html.twig' %}

{% block title %} Profil {% endblock %}

{% block stylesheets %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
    .form-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
    }
    .form-container h1 {
        text-align: center;
        margin-bottom: 30px;
    }
    .form-container button {
        display: block;
        width: 100%;
        margin-top: 20px;
    }
    .password-container {
        position: relative;
    }
    .toggle-password {
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: #007bff;
    }
</style>
{% endblock %}

{% block body %}
<div class="form-container">
    <h1>Mon profil</h1>


    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.firstName) }}
            {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.lastName) }}
            {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.address) }}
            {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.phone) }}
            {{ form_widget(form.phone, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.city) }}
            {{ form_widget(form.city, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.birthdate) }}
            {{ form_widget(form.birthdate, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.email) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.plainPassword) }}
            <div class="password-container">
                {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control', 'id': 'password-field'}}) }}
                <span id="toggle-password" class="toggle-password" onclick="togglePassword()">üëÅÔ∏è</span>
            </div>
        </div>
        <div class="mb-3">
            {{ form_label(form.domaine) }}
            {{ form_widget(form.domaine, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.domaine) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.cvFile) }}
            {{ form_widget(form.cvFile, {'attr': {'class': 'form-control'}}) }}
        </div>

        <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
    {{ form_end(form) }}
</div>

<script>
    function togglePassword() {
        var passwordField = document.getElementById('password-field');
        var togglePasswordIcon = document.getElementById('toggle-password');
        if (passwordField.type === 'password') {
            passwordField.type = 'text';
            togglePasswordIcon.textContent = 'üôà'; // Ic√¥ne pour masquer
        } else {
            passwordField.type = 'password';
            togglePasswordIcon.textContent = 'üëÅÔ∏è'; // Ic√¥ne pour afficher
        }
    }
</script>
{% endblock %}
